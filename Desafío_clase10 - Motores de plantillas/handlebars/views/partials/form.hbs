<main class="d-flex flex-column p-4">
    <h3 class="text-primary">Agregar un producto</h3>

    <br>

    <form action="/productos" method="post">
        <div class="form-group">
            <label for="title" class="font-weight-bold">Nombre</label>
            <input type="text" name="title" class="form-control">
        </div>
        <div class="form-group">
            <label for="price" class="font-weight-bold">Precio</label>
            <input type="number" name="price" class="form-control">
        </div>
        <div class="form-group">
            <label for="thumbnail" class="font-weight-bold">URL - Imagen</label>
            <input type="text" name="thumbnail" class="form-control">
        </div>

        <input type="submit" value="Enviar" class="btn btn-success mt-3 mb-5">

    </form>

    <a href="/productos" class="btn btn-primary">Ver productos</a>
</main>